        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rectas"
        android:layout_below="@id/btnVectorOperations"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnEcuaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resolver Sistemas de Ecuaciones"
        android:layout_below="@id/btnLineOperations"
